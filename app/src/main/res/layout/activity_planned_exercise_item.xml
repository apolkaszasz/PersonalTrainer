<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrd"
    tools:context="com.personaltrainer.apolka.personaltrainer.PlannedExerciseItem">


    <TextView
        android:id="@+id/ExerciseNameTextViewMyPlans"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextViewValue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ExerceMuscleTextViewMyPlans"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextViewValue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseNameTextViewMyPlans" />

    <TextView
        android:id="@+id/ExerciseRecommendedrepetitionsTextViewMyPlans"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text="Planned repetitions: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerceMuscleTextViewMyPlans" />

    <TextView
        android:id="@+id/ExerciseRecRepNumberMyPlans"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/colorTextViewValue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/ExerciseRecommendedrepetitionsTextViewMyPlans"
        app:layout_constraintStart_toEndOf="@+id/ExerciseRecommendedrepetitionsTextViewMyPlans"
        app:layout_constraintTop_toBottomOf="@+id/ExerceMuscleTextViewMyPlans" />

    <TextView
        android:id="@+id/ExerciseRecommendedSetstextViewMyPlans"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text="Planned sets: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseRecommendedrepetitionsTextViewMyPlans" />

    <TextView
        android:id="@+id/ExerciseRecSetsNumberMyPlans"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/colorTextViewValue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/ExerciseRecommendedrepetitionsTextViewMyPlans"
        app:layout_constraintStart_toEndOf="@+id/ExerciseRecommendedrepetitionsTextViewMyPlans"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseRecommendedrepetitionsTextViewMyPlans" />

    <TextView
        android:id="@+id/ExerciseDescriptionTesxtViewMyPlans"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text="Description: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseRecommendedSetstextViewMyPlans" />

    <TextView
        android:id="@+id/DescriptionValueMyPlans"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:text=""
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextViewValue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseDescriptionTesxtViewMyPlans" />

    <view
        android:id="@+id/youtubeVideo"
        class="com.google.android.youtube.player.YouTubePlayerView"
        id="@+id/view"
        android:layout_width="361dp"
        android:layout_height="207dp"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionValueMyPlans" />


</android.support.constraint.ConstraintLayout>
