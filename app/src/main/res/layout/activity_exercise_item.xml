<?xml version="1.0" encoding="utf-8"?>
<!-- TODO MAtyas: Altalanosan. Van rengeteg olyan ertek a marginoknak, ami standard, es rengeteg helyen ismetled. Igazabol mindent ki kellene vinni a dimens.xml-be,-->
<!-- de legalabb ezeket, amiket sokszor hasznalsz vidd ki, mert konnyebb lesz utanna. Lesznek ezek a meghatarozott ertekeid (8dp, 16dp) es azokat fogod tudni hasznalni.-->
<!-- TODO Matyas: A masik dolog, hogy a constraintLayoutnal az toEnd es toRight, illetve toStart es toLeft ugyanazok, ezert duplikalod oket, eleg egyiket (a start-end-eket hasznalni)-->
<!-- Ugyancsak nem a legjobb otlet megadni a textViewknak a mereteit. Hasznalj inkabb wrap_content-et, mert nem tudhatod sosem, hogy pont mekkora lesz a bele kerulo szoveg.-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.personaltrainer.apolka.personaltrainer.ExerciseItem">

    <TextView
        android:id="@+id/ExerciseNameTextView"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginEnd= "@dimen/margin8"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextViewValue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ExerceMuscleTextView"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:textColor="@color/colorTextViewValue"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseNameTextView" />

    <TextView
        android:id="@+id/ExerciseRecommendedrepetitionsTextView"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text="Recommended repetitions: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerceMuscleTextView" />

    <TextView
        android:id="@+id/ExerciseRecRepNumber"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textColor="@color/colorTextViewValue"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/ExerciseRecommendedrepetitionsTextView"
        app:layout_constraintStart_toEndOf="@+id/ExerciseRecommendedrepetitionsTextView"
        app:layout_constraintTop_toBottomOf="@+id/ExerceMuscleTextView" />

    <TextView
        android:id="@+id/ExerciseRecommendedSetstextView"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text="Recommended sets: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseRecommendedrepetitionsTextView" />

    <TextView
        android:id="@+id/ExerciseRecSetsNumber"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:textColor="@color/colorTextViewValue"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/ExerciseRecommendedrepetitionsTextView"
        app:layout_constraintStart_toEndOf="@+id/ExerciseRecommendedrepetitionsTextView"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseRecommendedrepetitionsTextView" />
    <TextView
        android:id="@+id/ExerciseDescriptionTesxtView"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:text="Description: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseRecommendedSetstextView" />

    <TextView
        android:id="@+id/DescriptionValue"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="@dimen/margin8"
        android:textColor="@color/colorTextViewValue"
        android:layout_marginTop="@dimen/margin16"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseDescriptionTesxtView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/AddThisWorkoutToPlansFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>
